= render 'partials/list_errors', object: @business
.col-md-6.col-xs-10.col-sm-8.col-lg-5.center-block.no-float
  .card.big-padding
    %h2.blue-text Registrarse
    = form_for(@business, method: :create, html: { multipart: true }) do |f|
      .field
        = f.label :Nombre_de_la_empresa
        %br/
        = f.text_field :name, autofocus: true,class:"form-control"
      .field
        = f.label :Rut_de_la_empresa
        %br/
        = f.text_field :rut,class:"form-control"
      .field
        = f.label :Razon_Social
        %em (no obligatorio)
        %br/
        = f.text_field :legal_name,class:"form-control"
      .field
        = f.label :telefono_de_la_empresa
        %em (no obligatorio)
        %br/
        = f.number_field :phone, class:"form-control"
      .field
        = f.label :Direccion_de_la_empresa
        %em (no obligatorio)
        %br/
        = f.text_field :address,class:"form-control"
      .field
        = f.label :Nombre_del_contacto
        %em (no obligatorio)
        %br/
        = f.text_field :contact_name,class:"form-control"
      .field
        = f.label :telefono_del_contacto
        %em (no obligatorio)
        %br/
        = f.number_field :contact_phone, class:"form-control"
      .field
        = f.label :imagen
        = f.file_field :image
      %br/
      .field
        = f.label :email
        %br/
        = f.email_field :email,class:"form-control"
      .field
        = f.label :contraseña
        - if @minimum_password_length
          %em
            (#{@minimum_password_length} caracteres minimo)
        %br/
        = f.password_field :password, autocomplete: "off",class:"form-control"
      .field
        = f.label :confirmacion_contraseña
        %br/
        = f.password_field :password_confirmation, autocomplete: "off",class:"form-control"
      .actions
        = f.submit "Registrarse",class:"btn btn-info"
