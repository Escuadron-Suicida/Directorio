- if business_signed_in?
  .col-md-6.col-xs-10.col-sm-8.col-lg-5.center-block.no-float
    .card.big-padding
      %h2.blue-text Editar Perfil
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
        = devise_error_messages!
        .field
          = f.label :Nombre_de_la_empresa
          %br/
          = f.text_field :name, autofocus: true,class:"form-control", autocomplete: "on"
        .field
          = f.label :Rut_de_la_empresa
          %br/
          = f.text_field :rut,class:"form-control", autocomplete: "on"
        .field
          = f.label :Razon_Social
          %em (no obligatorio)
          %br/
          = f.text_field :legal_name,class:"form-control", autocomplete: "on"
        .field
          = f.label :telefono_de_la_empresa
          %em (no obligatorio)
          %br/
          = f.number_field :phone, class:"form-control", autocomplete: "on"
        .field
          = f.label :Direccion_de_la_empresa
          %em (no obligatorio)
          %br/
          = f.text_field :address,class:"form-control", autocomplete: "on"
        .field
          = f.label :Nombre_del_contacto
          %em (no obligatorio)
          %br/
          = f.text_field :contact_name,class:"form-control", autocomplete: "on"
        .field
          = f.label :telefono_del_contacto
          %em (no obligatorio)
          %br/
          = f.number_field :contact_phone, class:"form-control", autocomplete: "on"
        .field
          = f.label :email
          %br/
          = f.email_field :email,class:"form-control", autocomplete: "on"
        .field
          =f.label :contraseña_actual
          %br/
          =f.password_field :current_password,class:"form-control", autocomplete: "off"
        .field
          = f.label :contraseña_nueva
          - if @minimum_password_length
            %em
              (#{@minimum_password_length} caracteres minimos)
          %br/
          = f.password_field :password, autocomplete: "off",class:"form-control"
        .field
          = f.label :confirmacion_contraseña_nueva
          %br/
          = f.password_field :password_confirmation, autocomplete: "off",class:"form-control"
        .actions
          %br/
          = f.submit "Actualizar", class:"btn btn-success"
        = button_to "Cerrar mi Cuenta", registration_path(resource_name),class:"btn btn-danger", data: { confirm: "Estas Seguro?" }, method: :delete
