<!DOCTYPE html>
<html>
  <head>
    <title>Directorio</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if not business_signed_in? %>
      <%= link_to 'Iniciar sesion', new_business_session_path %>
      <%= link_to 'Registrar empresa', new_business_registration_path %>
    <% else %>
      <%= link_to 'Cerrar sesion', destroy_business_session_path, method: :delete %>
    <% end %>

    <p class="notice">
      <%= notice %>
    </p>

    <p class="alert">
      <%= alert %>
    </p>

    <%= yield %>
  </body>
</html>
