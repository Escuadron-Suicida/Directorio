%article.big-padding
  %h1.text-center.blue-text
    Inventario
  %section.inline-block.col-md-12.row
    %section.pull-right
      = form_tag({:controller => "productos", :action => "index"}, :method => :get) do 
        =text_field_tag "searchbox", params[:searchbox],placeholder:"Buscar por nombre"
        =submit_tag "Buscar", :nombre => nil
        -if current_business.try(:admin? )
          = link_to new_producto_path, class:"btn btn-success" do
            Nuevo Producto

    %table.table.table-striped.table-hover.col-md-8.no-float
      %thead
        %tr.info
          %th Nombre
          %th Descripcion
          %th Stock
          %th Precio compra
          %th Precio venta
          %th Empresa
          %th 
          %th
          %th

      %tbody
        - @productos.each do |producto|
          %tr.success
            %td= producto.nombre
            %td= producto.descripcion
            %td= producto.stock
            %td= producto.precio_compra
            %td= producto.precio_venta
            %td= producto.business_id
            %td= link_to 'Mostrar', producto
            -if current_business.try(:admin? )
              %td= link_to 'Editar', edit_producto_path(producto)
              %td= link_to 'Eliminar', producto, :method => :delete, :data => { :confirm => 'Estas Seguro?' }