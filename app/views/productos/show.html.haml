.col-lg-9.5.col-md-8.col-xs-12.col-sm-10.col-sm-11.no-float.center-block
  %article.card.big-padding
    %header
      %h1.grey-text.big= @producto.nombre
    %section
      .col-xs-6.col-md-5.no-padding
        =image_tag @producto.avatar.url
      %section
        .col-md-1.inline-block.hidden-xs
        .col-xs-5.col-md-6.text-left
          Nombre de la empresa :
          %h3.blue-text.bold.normal= @producto.business.name
          %h3.green-text.bold.normal

    %section
    .col-xs-5.col-md-6.text-left
      %h3.green-text.bold.normal.inline-block Descripcion del Producto
      %p= @producto.descripcion
      -if current_business.try(:admin? )
        = link_to edit_producto_path(@producto), class:"btn btn-info" do
          Editar Producto      